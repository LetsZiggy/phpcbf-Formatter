# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 2
tab_width = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.md]
trim_trailing_whitespace = false

# prettier doesn't respect .editorconfig options
;[*.json]
;insert_final_newline = false

[*.{yml,yaml}]
indent_style = space
